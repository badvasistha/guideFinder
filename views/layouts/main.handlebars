    <script>
        $(document).ready(function () {
            $(".extendedInfo").on("click", function (e) {
                e.preventDefault();
                const id = $(this).attr("data-id")
                 localStorage.setItem('contactId', id)
                $.get("/profiles/" + id).then(function (data) {

                    $("#exampleModalLongTitle").text(data.name);
                    $("#match-img").attr("src", data.photolink);
                    $("#age").text(data.age);
                    $("#activity").text(data.activity);
                    $("#city").text(data.city);
                    $("#yearsofExperience").text(data.yearsofExperience);
                    $("#descriptionActivity").text(data.descriptionActivity);
                    $("#imgs1").attr("src", data.pic1);
                    $("#imgs2").attr("src", data.pic2);
                    $("#imgs3").attr("src", data.pic3);
                    $("#imgs4").attr("src", data.pic4);
                    $("#imgs5").attr("src", data.pic5);
                    $("#imgs6").attr("src", data.pic6);

                    $('#myModal').modal('toggle');
                });
            });

            $("#contactMe").on("click", function (e) {
                e.preventDefault();
               
                window.location.replace("/loginUser")
            });
        });
        // jQuery to open and close chat modal
            $(".chat-button").on("click", function (e) {
                e.preventDefault();
                const id = $(this).attr("data-id")
                    $('#chatModal').modal('toggle');
            });
    </script>

